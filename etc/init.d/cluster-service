name="${RC_SVCNAME}"

description="cluster thing ${name}"

depend() {
if [[ "$RC_SVCNAME" != cluster-service ]];then
	need "cluster_${providingnode}_${name}"
fi
}

start(){
	ebegin "starting ${name} .."
}

stop(){
    rc-service "remote_${providingnode}_${name}" stop
	eend
}












